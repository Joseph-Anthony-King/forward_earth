### Orbital Habitat ###
#######################

entity = {

	###General Information
	
	name = "ai_ship_set_01_orbital_habitat_entity"
	pdxmesh = "locator_mesh"
	scale = 1.3
	game_data = {
		size = 18 
		shader_type = ship 
		emissive_recolor_crunch = 10.0
	}
		
	###Locators for Extensions
	
	locator = { name = "extension_attachment_01"	position = {  0 0.25 0 } 	rotation = { 0  90 0 }}
	locator = { name = "extension_attachment_02"	position = {  0 -0.25 0 } 	rotation = { 0 -90 0 }}
	
	attach = { extension_attachment_01		= "ai_ship_set_01_orbital_habitat_extension_02_entity" }
	attach = { extension_attachment_02		= "ai_ship_set_01_orbital_habitat_extension_02_entity" }

		
	###Animations
	
	default_state = "idle"
	state = { name = "idle" state_time = 5 animation_speed = 0
		event = { time = 0 particle = "ai_ship_set_core_effect" keep_particle = yes trigger_once = yes }}
	state = { name = "moving"	state_time = 5 animation_speed = 0
		event = { time = 0 particle = "ai_ship_set_core_effect" keep_particle = yes trigger_once = yes }}
	state = { name = "death" state_time = 5 looping = no 
		event = { time = 4.9 particle = "medium_ai_station_explosion_particle" keep_particle = yes trigger_once = yes sound = { soundeffect = "station_explosion_energy" }}}
}

